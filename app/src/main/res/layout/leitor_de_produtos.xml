<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/txtComecar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lblComecar"
        android:textAlignment="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="184dp"
        tools:layout_editor_absoluteY="302dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <Button
        android:id="@+id/btnBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnBuscar"
        tools:layout_editor_absoluteX="156dp"
        tools:layout_editor_absoluteY="248dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtComecar"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/txtRua"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text=""
        android:scrollbars="vertical"
        tools:layout_editor_absoluteX="159dp"
        tools:layout_editor_absoluteY="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBuscar"/>

    <Button
        android:id="@+id/btnRestart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nova lista"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtRua" />


    <TextView
        android:id="@+id/txtRelatorio"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:layout_marginTop="30dp"
        android:scrollbars="vertical"
        android:text=""
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/btnRestart"
        tools:layout_editor_absoluteX="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>